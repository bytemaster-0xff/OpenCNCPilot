<UserControl x:Class="OpenCNCPilot.Controls.CurrentFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenCNCPilot.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left"  >
            <Label Name="LabelFilePosition" Content="0" Margin="0,0,-6,0"/>
            <Label Content="/"/>
            <Label Name="LabelFileLength" Content="0" Margin="-8,0,0,0"/>
        </StackPanel>

        <ListView Grid.Row="1" Name="ListViewFile"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="Transparent"/>
    </Grid>
</UserControl>
