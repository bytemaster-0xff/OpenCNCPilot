<Window x:Class="OpenCNCPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:local="clr-namespace:OpenCNCPilot"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:ctls="clr-namespace:OpenCNCPilot.Controls"
		xmlns:util="clr-namespace:OpenCNCPilot.Util"
        mc:Ignorable="d"
		AllowDrop="True"
		Drop="Window_Drop"
		DragEnter="Window_DragEnter"
        Title="OpenCNCPilot by martin2250" Height="1024" Width="1280" Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary Source="MainWindow.Resources.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File"  >
                <MenuItem Header="Open HeightMap"  Command="{Binding OpenHeightMapCommand}" />
                <MenuItem Header="Open GCode File" Command="{Binding OpenGCodeFileCommand}" />
                <Separator />
                <MenuItem  Header="Close" Command="{Binding Close}" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="300" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ctls:JobControl Grid.ColumnSpan="2" />

                <ctls:HeightMapControl  x:Name="HeightMap" Grid.Row="1" Grid.ColumnSpan="2" />
                
                <ctls:CurrentFileControl x:Name="CurrentFile"  Grid.Row="2"/>
                <ctls:MachineResponseControl x:Name="MachineResponse" Grid.Row="2" Grid.Column="1" />
                
                <ctls:MachineControl  Grid.Column="2" Grid.RowSpan="2" />
                <ctls:ImageSensorControl HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="2" />
                <TextBox x:Name="TextBoxManual" Grid.Row="3" Grid.ColumnSpan="2" Margin="4,4,24,4" Height="28" />
                <Button Grid.Row="3" Grid.Column="1" Height="28" Width="24" HorizontalAlignment="Right">
                    <Button.Content>
                        <fa:ImageAwesome Icon="Play" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
