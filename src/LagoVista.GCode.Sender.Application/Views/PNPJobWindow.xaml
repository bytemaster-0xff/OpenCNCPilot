<Window x:Class="LagoVista.GCode.Sender.Application.Views.PNPJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LagoVista.GCode.Sender.Application.Views"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="Pick and Place Job" Height="800" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="Parts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ToolBar>
                        <Button Content="+" />
                    </ToolBar>
                    <ListView Grid.Row="0" ItemsSource="{Binding Parts}" HorizontalContentAlignment="Stretch" SelectedItem="{Binding SelectedPart, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Count}" TextAlignment="Right" Margin="0,0,10,0" Grid.Column="0" />
                                    <TextBlock Text="{Binding PackageName}" Grid.Column="1" />
                                    <TextBlock Text="{Binding LibraryName}" Grid.Column="2" />
                                    <TextBlock Text="{Binding Value}" Grid.Column="3" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid  Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Package" />
                        <Label Content="Library" Grid.Row="1" />
                        <Label Content="Value" Grid.Row="2" />
                        <Label Content="Feeder" Grid.Row="3" />
                        <Label Content="Row" Grid.Row="4" />
                        <TextBlock Text="{Binding SelectedPart.PackageName}" Grid.Column="1" />
                        <TextBlock Text="{Binding SelectedPart.LibraryName}" Grid.Row="1" Grid.Column="1" />
                        <TextBlock Text="{Binding SelectedPart.Value}" Grid.Row="2" Grid.Column="1" />
                        <ComboBox ItemsSource="{Binding JobFeeders}" SelectedItem="{Binding SelectedPartFeeder}" DisplayMemberPath="Name" Grid.Row="3" Grid.Column="1" />
                        <ComboBox ItemsSource="{Binding SelectedPartFeeder.Rows}" DisplayMemberPath="Display" SelectedValuePath="Row" Grid.Row="4" Grid.Column="1" SelectedItem="{Binding SelectedPartRow}" />
                    </Grid>
                    <Button Grid.Row="2" Command="{Binding SaveJobCommand}" Content="Save" Width="80" Height="20" Margin="4" HorizontalAlignment="Right" />
                </Grid>
            </TabItem>
            <TabItem Header="Feeders">
                <Grid>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*" />
                        <RowDefinition Height="50*" />
                    </Grid.RowDefinitions>
                    <ListView ItemsSource="{Binding FeederTypes}" Grid.RowSpan="2" SelectedItem="{Binding SelectedFeeder, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding Name}" />
                                    <Label Content="{Binding Length}" Grid.Column="1" />
                                    <Label Content="{Binding Width}" Grid.Column="2" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Button Width="32" Height="32" Grid.Column="1" Command="{Binding AddFeederCommand}" >
                        <Button.Content>
                            <fa:ImageAwesome  Icon="ArrowCircleRight" />
                        </Button.Content>
                    </Button>
                    <ListView ItemsSource="{Binding JobFeeders}" Grid.Column="2" SelectedItem="{Binding SelectedFeederInstance, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding Feeder.Name}" />
                                    <Label Content="{Binding Feeder.Length}" Grid.Column="1" />
                                    <Label Content="{Binding Feeder.Width}" Grid.Column="2" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <ListView ItemsSource="{Binding SelectedFeederInstance.Rows}" Grid.Column="2" Grid.Row="1" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="{Binding RowNumber}" />
                                    <Label Content="{Binding Part.PackageName}" Grid.Column="1" />
                                    <Label Content="{Binding Part.Value}" Grid.Column="2" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
